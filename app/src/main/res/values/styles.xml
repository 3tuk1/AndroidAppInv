<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:colorBackground">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>
</resources>