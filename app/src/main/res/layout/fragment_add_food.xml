<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_toolbar_background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_bottom_nav_background">

        <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/neon_green"
                android:backgroundTint="@color/purple_700"
                android:textColorHint="@color/blue"
                android:hint="食品名" />

        <EditText
                android:id="@+id/quantityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="数量"
                android:textColor="@color/neon_green"
                android:backgroundTint="@color/purple_700"
                android:textColorHint="@color/blue"
                android:inputType="number" />

        <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_700"
                android:textColor="@color/neon_green"
                android:textColorHint="@color/blue"
                android:spinnerMode="dropdown"
                android:hint="カテゴリ" />


        <EditText
                android:id="@+id/expiryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textColor="@color/neon_green"
                android:backgroundTint="@color/purple_700"
                android:hint="賞味期限"
                android:textColorHint="@color/blue"
                android:focusable="false" />

        <ImageView
                android:id="@+id/foodImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_placeholder_background"
                android:contentDescription="食品の写真" />

        <Button
                android:id="@+id/selectImageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/black"
                android:text="写真を選択" />

        <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/black"
                android:text="保存" />
    </LinearLayout>
</ScrollView>
